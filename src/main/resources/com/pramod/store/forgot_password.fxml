<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pramod.store.ForgotController"
      prefWidth="500" prefHeight="500"
      style="-fx-background-color: #f0f0f0;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Title -->
    <Label text="Forgot Password"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Email Input -->
    <TextField fx:id="emailField" promptText="Enter your email" maxWidth="300"
               style="-fx-background-radius: 10; -fx-padding: 10; -fx-border-radius: 10;"/>

    <!-- Reset Button -->
    <Button text="Reset Password" onAction="#onResetClicked" maxWidth="200"
            style="-fx-font-size: 16px; -fx-background-color: #27ae60;
                   -fx-text-fill: white; -fx-background-radius: 15; -fx-padding: 8 15;"/>
</VBox>
