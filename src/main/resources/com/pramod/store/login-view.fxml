<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/1" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pramod.store.LoginController"
           prefWidth="400" prefHeight="500"
           stylesheets="@/com/pramod/store/styles/login.css"
           styleClass="root-pane">

    <!-- Main Login Form -->
    <VBox alignment="CENTER" spacing="20" styleClass="login-box">

        <Label text="Login" styleClass="login-title"/>

        <TextField fx:id="usernameField" promptText="Username" maxWidth="300"
                   styleClass="input-field"/>

        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"
                       styleClass="input-field"/>

        <Button text="SignIn" onAction="#onLoginClicked"
                styleClass="btn-primary"
                maxWidth="200"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="SignUp" onAction="#onRegisterClicked"
                    styleClass="btn-primary"
                    maxWidth="300"/>

            <Button text="ResetUser" onAction="#onForgotPasswordClicked"
                    styleClass="btn-warning"
                    maxWidth="300"/>
        </HBox>
    </VBox>

    <ProgressIndicator fx:id="progressIndicator" visible="false"
                       styleClass="progress-indicator-custom"
                       prefWidth="80" prefHeight="80"/>
</StackPane>
